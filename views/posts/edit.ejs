<h1>Edit Post</h1>

<form action="/posts/<%= post.id %>?_method=PUT" method="POST">
    <div><input type="text" name="post[title]" value="<%= post.title %>"></div>
    <div><input type="text" name="post[price]" value="<%= post.price %>"></div>
    <div><textarea name="post[description]" id="" cols="30" rows="10" ><%= post.description %></textarea></div>
    <div><input type="text" name="post[location]" id="" value="<%= post.location %>"></div>
    <input type="submit">
</form>